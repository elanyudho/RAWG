<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@color/white_white" />

    <!-- Top stroke shape -->
    <item
        android:top="0dp"
        android:right="-2dp"
        android:left="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/grey_zircon" />
        </shape>
    </item>
</layer-list>